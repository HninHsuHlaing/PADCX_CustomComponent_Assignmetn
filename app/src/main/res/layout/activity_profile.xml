<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context=".activities.ProfileActivity"
    android:background="#413E3E"
    >

  <com.padcx.customcomponentproj.view.component.CircleImageViewWithoutStoke
      android:id="@+id/crossimg"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/cross"
      app:cornerRadius="20dp"
      android:layout_marginLeft="350dp"
      android:layout_marginTop="30dp"
      />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        >

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/crossimg"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:cardCornerRadius="20dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed Tasks"
                android:textColor="#868282"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                >

            </TextView>
            <TextView
                android:id="@+id/tvuidesigner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI Designer"
                android:textSize="15dp"
                android:textColor="#8B8989"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="150dp"
                >

            </TextView>
            <com.padcx.customcomponentproj.view.component.CircleImageViewWithoutStoke
                android:id="@+id/profileimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/news_sample"
                app:cornerRadius="50dp"
                android:layout_marginLeft="150dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_toRightOf="@+id/profileimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Task"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"

                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zachary Butler"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="130dp"
            >

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            >
            <com.padcx.customcomponentproj.view.component.CircleImageViewWithoutStoke
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_share_black_24dp"
                app:cornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
        <Button
            android:id="@+id/btnmessage"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_background_green"
            android:text="MESSAGE"
            android:layout_marginLeft="130dp"
            >

        </Button>
            <com.padcx.customcomponentproj.view.component.CircleImageViewWithoutStoke
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_share_black_24dp"
                app:cornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/btnmessage"
                android:layout_marginLeft="50dp"
                />
        </RelativeLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            android:layout_marginTop="250dp"
            app:tabTextColor="#FFF" />

<!--        <androidx.viewpager2.widget.ViewPager2-->
<!--            android:id="@+id/pager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent" />-->

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:id="@+id/relativeLayout"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

<!--            <androidx.viewpager2.widget.ViewPager2-->
<!--                android:id="@+id/viewPager2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginTop="230dp"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->
<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="300dp"
            />


    </androidx.cardview.widget.CardView>
    </ScrollView>


